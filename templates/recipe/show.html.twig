{% extends 'base.html.twig' %}

{% block title %}Recette{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Détails de la recette</h1>
        <div>
            <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}" class="btn btn-warning me-2">
                ✏️ Modifier
            </a>
            <a href="{{ path('app_recipe_index') }}" class="btn btn-secondary">
                ⬅️ Retour à la liste
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <tbody>
        <tr>
            <th scope="row" style="width: 20%;">Id</th>
            <td>{{ recipe.id }}</td>
        </tr>
        <tr>
            <th scope="row">Nom</th>
            <td>{{ recipe.name }}</td>
        </tr>
        <tr>
            <th scope="row">Description</th>
            <td>{{ recipe.content|nl2br }}</td>
        </tr>
        <tr>
            <th scope="row">Ingrédients</th>
            <td>
                {% if recipe.ingredients|length > 0 %}
                    <ul class="list-group">
                        {% for ingredient in recipe.ingredients %}
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                {{ ingredient }}
                                <span class="badge bg-primary rounded-pill">
                                        {{ ingredient.calories }} cal
                                    </span>
                            </li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <span class="text-muted">Aucun ingrédient</span>
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>
{% endblock %}
